<div id="sidebar">
  <ul class="nav pull-right">
    <% if user_signed_in? %>
        <li>
            Account : <%= link_to current_user.email, edit_user_registration_path %>
        </li>
        <li><%= button_to "Logout", destroy_user_session_path, :method => :delete %></li>
    <% else %>
      <li><%= button_to "Sign in", new_user_session_path %></li>
    <% end %>
  </ul>
  <ul>
    <li>
        <div id="search">
          <%= search_form_for @q do |f| %>
          <%= f.text_field :title_or_body_cont %>
          <br />
          <%= f.submit "Search" %>
          <% end %>
        </div>
        <div style="clear: both;">&nbsp;</div>
       </li>
       <li>
        <h2>Get The Framework</h2>
        <p>You can download Ruby and/or Ruby on Rails for free right now
         <a style="color:#D93544;" href="http://rubyonrails.org/download"></a></p>
       </li>
       <li>
        <h2>Categories</h2>
        <ul>
          <% all_categories.each do |cat| %>
            <li><%= link_to cat.name, category_path(:id => cat.id) %></li>
          <% end %>
        </ul>
       </li>
       <li>
        <h2>Blogroll</h2>
        <ul>
         <% all_posts.each do |post| %>
            <li><%= link_to post.title, post_path(:id => post.id) %></li>
          <% end %>
        </ul>
       </li>

      </ul>
     </div>
     <!-- end #sidebar -->